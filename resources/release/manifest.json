{
  "name": "SuperSelect",
  "description": "Select and save text from web pages with speed.",
  "version": "0.0.1",
  "browser_action": {
    "default_title": "SuperSelect",
    "default_popup": "popup.html",
    "default_icon": {
      "38": "images/z38.png",
      "128": "images/z128.png"
    }
  },
  "icons": {
    "38": "images/z38.png",
    "128": "images/z128.png"
  },
  "web_accessible_resources": [
    "css/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "compiled/content-script.js"
      ]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "manifest_version": 2,
  "minimum_chrome_version": "55"
}
