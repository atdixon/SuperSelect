{
  "name": "Zelector",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "css/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/fa/css/font-awesome-chrome-ext.min.css",
        "css/zelector.css"
      ],
      "js": [
        "compiled/content-script.js"
      ]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "manifest_version": 2,
  "minimum_chrome_version": "55"
}
